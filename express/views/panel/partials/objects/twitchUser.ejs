<<%- locals?.link ? `a href="${locals.link}"` : "div" %> class="user twitch">
    <img src="<%= account.profile_image_url %>" alt="Profile picture for <%= account.display_name %>">
    <div class="info">
        <h3 class="username"><%= account.display_name %><%- account.broadcaster_type === "partner" ? ` <img src="/assets/images/badges/twitch/partner.png" alt="Partner badge">` : "" %></h3>
        <div class="data">
            <% if (account.login !== account.display_name.toLowerCase()) { %>
            <span class="login"><%= account.login %></span>
            &bullet;
            <% } %>
            <span class="id"><%= account?._id ? account._id : account.id %></span>
            <% if (account.follower_count) { %>
            &bullet;
            <span class="followers"><%= comma(account.follower_count) %> follower<%= account.follower_count === 1 ? "" : "s" %></span>
            <% } %>
        </div>
    </div>
</<%= locals?.link ? "a" : "div" %>>